<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/btn_share_item_bg_disabled" />
            <stroke android:width="@dimen/round_bg_stroke" android:color="@color/item_stroke" />
            <corners android:topRightRadius="@dimen/btn_bg_radius" android:bottomRightRadius="@dimen/btn_bg_radius" />
            <padding android:left="@dimen/round_bg_stroke" android:top="@dimen/round_bg_stroke" android:right="@dimen/round_bg_stroke" android:bottom="@dimen/round_bg_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_color_blue_pressed" />
            <stroke android:width="@dimen/round_bg_stroke" android:color="@color/item_stroke" />
            <corners android:topRightRadius="@dimen/btn_bg_radius" android:bottomRightRadius="@dimen/btn_bg_radius" />
            <padding android:left="@dimen/round_bg_stroke" android:top="@dimen/round_bg_stroke" android:right="@dimen/round_bg_stroke" android:bottom="@dimen/round_bg_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_color_blue1" />
            <stroke android:width="@dimen/round_bg_stroke" android:color="@color/item_stroke" />
            <corners android:topRightRadius="@dimen/btn_bg_radius" android:bottomRightRadius="@dimen/btn_bg_radius" />
            <padding android:left="@dimen/round_bg_stroke" android:top="@dimen/round_bg_stroke" android:right="@dimen/round_bg_stroke" android:bottom="@dimen/round_bg_stroke" />
        </shape>
    </item>
</selector>